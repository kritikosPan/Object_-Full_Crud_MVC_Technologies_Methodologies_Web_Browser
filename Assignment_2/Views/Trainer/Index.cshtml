@model IEnumerable<Assignment_2.Models.Trainer>

@using Assignment_2.Models




@if (TempData["message"] != null)
{
    <div class="alert alert-success alert-dismissible fade in">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong> @TempData["message"]
    </div>
}

<a class="btn btn-primary" href="/Trainer/Create">Create Trainer</a>

<br />

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Subject</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.FirstName</td>
                <td>@t.LastName</td>
                <td>@t.Subject</td>

                <td>
                    <a class="btn btn-primary" href="/Trainer/Details?id=@t.Id">Details</a>
                    <a class="btn btn-success" href="/Trainer/Edit?id=@t.Id">Edit</a>


                    <form class="text-warning" action="/trainer/delete" method="post">

                        <input type="hidden" name="id" value="@t.Id" />
                        <input type="submit" value="Delete" />

                    </form>
                </td>
            </tr>
        }

    </tbody>

</table>


