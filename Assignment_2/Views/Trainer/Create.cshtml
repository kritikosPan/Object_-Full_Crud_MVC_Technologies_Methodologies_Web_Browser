@model Assignment_2.Models.Trainer

@using Assignment_2.Models


<h1>Create New Trainer</h1>

<form method="post">

    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.FirstName)
        @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Give your First Name" } })
        @Html.ValidationMessageFor(m => m.FirstName, "", new { title = "Boom", id = "boomer", @class = "text-danger" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.LastName)
        @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Give The Last Name" } })
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Subject)
        @Html.EditorFor(m => m.Subject, new { htmlAttributes = new { @class = "form-control", placeholder = "Give The Subject" } })
        @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
    </div>


    <input class="btn btn-primary" type="submit" value="Create" />
    <input class="btn btn-success" type="reset" value="Clear" />
</form>


@Html.ActionLink("Go Back", "Index", null, new { @class = "btn btn-success" });
